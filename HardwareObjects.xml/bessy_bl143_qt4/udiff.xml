<equipment class="Microdiff">
  <exporter_address>192.168.27.140:9001</exporter_address>
  <username>Microdiff</username>
  <device role="camera" hwrid="/udiff_camera" />
  <phaseList>("Transfer", "Centring", "DataCollection", "BeamLocation")</phaseList>
  <motors>
    <phi>
      <device role="phi" hwrid="/udiff_omega"></device>
      <device role="phiz" hwrid="/udiff_phiz"></device>
    </phi>
    <sample>
      <device role="zoom" hwrid="/udiff_zoom"/>
      <device role="lightLevel" hwrid="/udiff_lightmot"/>
      <device role="light" hwrid="/udiff_lightmot"/>
      <device role="flight" hwrid="/udiff_flightmot"/>
      <device role="lightInOut" hwrid="/udiff_light"/>
      <device role="focus" hwrid="/udiff_phix"/>
      <device role="phiy" hwrid="/udiff_phiy"/>
      <device role="sampx" hwrid="/udiff_sampx"/>
      <device role="sampy" hwrid="/udiff_sampy"/>
      <device role="kappa" hwrid="/udiff_kappa"/>
      <device role="kappa_phi" hwrid="/udiff_kappaphi"/>
    </sample>
    <more>
      <device hwrid="/distccd"/>
<!--
      <device hwrid="/exp/shuty"/>
      <device hwrid="/exp/shutz"/>
-->      
    </more>
  </motors>

  <channel type="exporter" name="CurrentPhase">CurrentPhase</channel>

  <object role="beam_info" href="beam_info" />
  <object role="centring" href="/centring-math" />

  <centring_phi_direction>+1</centring_phi_direction>

  <aperture>/udiff_aperturemot</aperture>
  <samplechanger>/sc-mockup</samplechanger>
  <wagolight>/udiff_light</wagolight>
  <channel version="exp143:spec" type="spec" name="auto_centring_flag">AUTO_CENTRING_FLAG</channel>
  <channel version="exp143:spec" type="spec" name="auto_loop_centring_enabled">ENABLE_AUTO_LOOP_CENTRING</channel>
  <channel version="exp143:spec" type="spec" name="auto_crystal_centring_enabled">ENABLE_AUTO_CRYSTAL_CENTRING</channel>
  <channel version="exp143:spec" type="spec" name="playback_centring_enabled">ENABLE_PLAYBACK_CENTRING</channel>
  <command version="exp143:spec" type="spec" name="getBeamSizeX">getMxBeamSizeX</command>
  <command version="exp143:spec" type="spec" name="getBeamSizeY">getMxBeamSizeY</command>
  <command version="exp143:spec" type="spec" name="getBeamShape">getMxBeamShape</command>
